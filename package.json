{
  "name": "finderbox-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:web": "npm run dev --workspace=apps/web",
    "start:server": "npm run start --workspace=packages/api",
    "dev": "concurrently \"npm run start:web\" \"npm run start:server\"",
    "build:web": "npm run build --workspace=apps/web"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "firebase": "^12.6.0",
    "react": "^19.2.1",
    "react-bootstrap": "^2.10.10",
    "react-bootstrap-icons": "^1.11.6",
    "react-dom": "^19.2.1",
    "react-firebase-hooks": "^5.1.1",
    "react-router-dom": "^7.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "jest": "^27.5.1",
    "react-test-renderer": "^19.2.1"
  }
}
