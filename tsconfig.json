{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
    // Ajuste aqui para o Monorepo
    "baseUrl": ".", 
    "paths": {
      "@web/*": ["apps/web/src/*"],
      "@mobile/*": ["apps/(tabs)/*"] // se for usar caminhos absolutos no mobile
    }
  },
  "include": [
    "apps/web/src",
    "packages"
  ]
}
